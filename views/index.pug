extends layout

block content
  div(id='app')
    h1 #{title}
    div #{msg}
    div 
      input(name="card-name", v-model="searchTerm")
      button(v-on:click="search") Search
    h2 Vue List:
    p(v-if="loading") 
      b Loading Items...
    ul(v-else)   
      li(v-for="item in items") 
        p
          b {{item.name}} 
        div
          img(v-bind:src="item.imageUrl")
    
  script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
  script(src='/javascripts/app.js')
    
